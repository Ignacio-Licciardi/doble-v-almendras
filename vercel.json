{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "functions": {
    "app/**/*.{js,ts,jsx,tsx}": {
      "runtime": "@vercel/node"
    }
  },
  "images": {
    "domains": [],
    "formats": ["image/webp", "image/avif"],
    "sizes": [16, 32, 48, 64, 96, 128, 256, 384]
  },
  "headers": [
    {
      "source": "/images/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}